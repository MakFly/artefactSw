{% extends 'base.html.twig' %}

{% block title %}Artefact Sw{% endblock %}

{% block javascripts %}
<script>

/*
* Permet de récupéré la value de l'option select
* en faisant ce genre de request ajax on peut renvoyé la value dans la request que le controller reprend :
* $idSelect = $request->request->get('idSelect');
* 
*/
$('#monsters_awake').change(function() {
	var idMonsters = $(this).val();
  
	$.ajax({
		url: '{{ path('ajax_monsters_action') }}',
		type: "POST",
		dataType: "json",
			data: {
				"idMonsters": idMonsters
			},
			async: true,
			success: function (data) {
				$('#textAjax').text(data.info);
				$('#textAjax2').text(data.info2);
				$('#textAjax3').text(data.info3);
				$('#textAjax4').text(data.info4);
				$('#textAjax5').text(data.info5);
			}
	})
});

</script>
{% endblock %}

